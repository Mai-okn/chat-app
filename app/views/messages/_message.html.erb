<div class = "chat">
  <div class="upper_chat">
    <div class="user_name">
      <%= message.user.name %>
    </div>
    <div class="date">
      <%= l message.created_at %>
    </div>
  </div>
  <div class="lower-chat">
    <div class="message">
      <%= message.content %>
    </div>
    <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image' if message.image.attached? %>
  </div>
</div>
